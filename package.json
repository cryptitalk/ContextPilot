{
  "name": "context-pilot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.3"
  },
  "icon": "resources/favicon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/your-repository.git"
  },
  "main": "./ext.js",
  "contributes": {
    "configuration": [
      {
        "title": "Context Pilot Settings",
        "properties": {
          "contextCode": {
            "type": "string",
            "default": "",
            "description": "Stores context code for the extension."
          },
          "tempContextCode": {
            "type": "string",
            "default": "",
            "description": "Stores temp context code to send to LLM."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.addContext",
        "title": "Add Context"
      },
      {
        "command": "extension.getContext",
        "title": "Get Context"
      },
      {
        "command": "extension.setOpenAIKey",
        "title": "Set LLM Key"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "contextpilot.submenu",
          "group": "9_contextpilot"
        }
      ],
      "contextpilot.submenu": [
        {
          "command": "extension.addContext"
        },
        {
          "command": "extension.setOpenAIKey"
        },
        {
          "command": "extension.getContext"
        }
      ]
    },
    "submenus": [
      {
        "id": "contextpilot.submenu",
        "label": "ContextPilot"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "axios": "^1.6.2",
    "showdown": "^2.1.0"
  }
}
