{
  "name": "context-pilot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.3"
  },
  "main": "./ext.js",
  "contributes": {
    "configuration": [
      {
        "title": "Context Pilot Settings",
        "properties": {
          "contextCode": {
            "type": "string",
            "default": "",
            "description": "Stores context code for the extension."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.addContext",
        "title": "Add Context"
      },
      {
        "command": "extension.getContext",
        "title": "Get Context"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "contextpilot.submenu",
          "group": "9_contextpilot"
        }
      ],
      "contextpilot.submenu": [
        {
          "command": "extension.addContext"
        },
        {
          "command": "extension.getContext"
        }
      ]
    },
    "submenus": [
      {
        "id": "contextpilot.submenu",
        "label": "ContextPilot"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ]
}